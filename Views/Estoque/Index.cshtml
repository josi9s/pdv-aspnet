@{
    Layout = "_Layout";
}

<div class="header-row">
    <div class="row mt-5">
        <div class="col-1 me-2">
            <h1>Produtos</h1>
        </div>         
        <div id="searcharea" class="col-1">
            <input type="text" class="form-control" placeholder="Pesquisar">
        </div>
        <div class="col-1">
            <a asp-action="Create" class="btn btn-primary">Adicionar</a>
        </div> 
    </div>
    
    <div class="row mt-5">
        <div class="col">
            <table class="table table-hover align-middle mx-auto">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descrição</th>
                        <th>Grupo</th>
                        <th>Preço Venda (R$)</th>
                        <th>Estoque</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Arroz Branco Tipo 1 Camil - 1kg</td>
                        <td>Alimentos</td>
                        <td>22.90</td>
                        <td>60</td>
                        <td>
                            <a asp-action="Details" asp-route-id="1" class="btn btn-primary">Ver</a>
                            <a asp-action="Edit" asp-route-id="1" class="btn btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="1" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div id="paginat" class="col-1 offset-10">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Anterior</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Próximo</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .navbar {
            background-color: #102F94;
            height: 60px;
        }

        .navbar li {
            padding-left: 30px;
        }

        .header-row {
            margin-top: 5%;
        }

        .container {
            text-align: center;
        }

        #searcharea {
            margin-left: 787px;
            width: 300px;
        }

        th {
            font-style: italic;
        }

        td {
            font-weight: normal;
        }

        h1 {
            font-size: 2.25em;
            line-height: 0.9;
        }

        #paginat {
            margin-left: 1032px;
        }
    </style>
}