@{
    Layout = "_Layout";
}

<div class="header-row">
    <div class="row mt-5">
        <div class="col-1 me-2">
            <h1>Produtos</h1>
        </div>         
        <div id="searcharea" class="col-1">
            <input type="text" class="form-control" placeholder="Pesquisar">
        </div>
        <div class="col-1">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdicionarProduto"">Adicionar</button>
        </div> 
    </div>
    
    <div class="row mt-5">
        <div class="col">
            <table class="table table-hover align-middle mx-auto">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descrição</th>
                        <th>Grupo</th>
                        <th>Preço Venda (R$)</th>
                        <th>Estoque</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Arroz Branco Tipo 1 Camil - 1kg</td>
                        <td>Alimentos</td>
                        <td>22.90</td>
                        <td>60</td>
                        <td>
                            <a asp-action="Details" asp-route-id="1" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalVerProduto">Ver</a>
                            <a asp-action="Edit" asp-route-id="1" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditarProduto">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="1" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div id="paginat" class="col-1 offset-10">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Anterior</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Próximo</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Adicionar -->
<div class="modal modal-lg fade" id="modalAdicionarProduto" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Adicionar Produto</h5>
      </div>

    <div class="product-content">

        <div class="row"> 
            <div class="col-4 ms-4">
                <div class="image-container">
                    <button id="upload-button" type="file" class="btn-outline-custom">
                        <i class="bi bi-upload fs-1"></i>
                    </button>
                </div>
            </div>
        
            <div class="col-7 infos">

                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col-11">
                                <label for="desc">Descrição</label>
                                <input type="text" style="width: 480px;" class="form-control" name="desc" id="desc">
                            </div>
                        </div>                
                    </div>

                    <div class="col">
                        <div class="row">
                            <div class="col-1">
                                <label for="id">ID</label>
                                <input type="text" style="width: 70px;" class="form-control" name="id" id="id" value="2" disabled>
                            </div>
                            <div class="col-1 offset-1 ms-5">
                                <label for="grupo">Grupo</label>
                                <input type="text" style="width: 300px;" class="form-control" name="grupo" id="grupo">
                            </div>
                            <div class="col-1 offset-7">
                                <label for="un">Unidade</label>
                                <input type="text" style="width: 70px;" class="form-control" name="un" id="un">
                            </div>
                        </div>                
                    </div>

                    <div class="col">
                        <div class="row">
                            <div class="col-1">
                                <label for="estoque">Estoque</label>
                                <input type="text" style="width: 70px;" class="form-control" name="estq" id="estq">
                            </div>
                            <div class="col-1 ms-5">
                                <label for="custo">Custo (R$)</label>   
                                <input type="text" style="width: 140px;" class="form-control" name="custo" id="custo">
                            </div>
                            <div class="col-1 offset-3">
                                <label for="custo">Preço Venda (R$)</label>
                                <input type="text" style="width: 140px;" class="form-control" name="venda" id="venda">
                            </div>    
                            <div class="col-1 offset-3 me-3">
                                <label for="custo">Status</label>
                                <input type="text" style="width: 70px;" class="form-control" name="status" id="status">
                            </div>
                        </div>    
                    </div>

                    <div class="col">
                        <div class="row">
                            <div class="col-1">
                                <label for="desc">NCM</label>
                                <input type="text" style="width: 143px;" class="form-control" name="ncm" id="ncm">
                            </div>
                            
                            <div class="col-6 offset-3">
                                <label for="fab">Fornecedor</label>
                                <input type="text" style="width: 318px;" class="form-control" name="forne" id="forne">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="modal-body">
            
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Salvar</button>
    </div>

    </div>
  </div>
</div>

