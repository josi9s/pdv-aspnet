@section Styles {
    <style>

        .header-row {
            margin-top: 5%;
        }

        .container {
            text-align: center;
        }

        #searcharea {
            margin-left: 787px;
            width: 300px;
        }

        th {
            font-style: italic;
        }

        td {
            font-weight: normal;
        }

        h1 {
            font-size: 2.25em;
            line-height: 0.9;
        }

        #paginat {
            margin-left: 1032px;
        }

        .modal-dialog{
            min-width: 800px;
            max-width: 800px;
        }

        .product-content {
            margin-top: 30px;
            width: 100%;
            height:250px; 
        }

        .image-container {
            border: 1px solid #DEE2E6;
            width: 250px;
            height: 250px;
            margin-top: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .product-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .product-content label {
            display: block;
            text-align: start;
            line-height: normal;
            margin-top: 1px;
            font-size: 1rem;
            width: 200px;
        }

        .product-content input[type="text"] {
            display: block;
            text-align: center;
            line-height: normal;
            margin-bottom: 10px;
            padding-left: 0;
            padding-right: 0;
            border: 1px solid #DEE2E6;
            border-radius: 0px;
            font-size: 1rem;
        }

        .form-control:disabled {
          background-color: #f1f1f1;
          opacity: 1;
        }

        #upload-button {
            border-radius: 0;
            width: 250px;
            height: 250px;
        }

        .btn-outline-custom {
            color: #DEE2E6;
            background-color: transparent; 
            border: 1px solid #DEE2E6; 
            transition: all 0.3s ease; 
        }

        .btn-outline-custom:hover {
            color: #ffffff;
            background-color: #DEE2E6;
            border-color: #DEE2E6;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(222, 226, 230, 0.3);
        }

        .btn-outline-custom:active{
            color: #ffffff;
            background-color: #ADB5BD; 
            border-color: #ADB5BD;
            transform: translateY(0);
            box-shadow: 0 2px 4px rgba(173, 181, 189, 0.4) inset;
        }

        .btn-outline-custom:focus {
            box-shadow: 0 0 0 0.2rem rgba(222, 226, 230, 0.5);
            outline: none; 
        }

        .btn-outline-custom:disabled {
            color: #6C757D; 
            background-color: transparent; 
            border-color: #6C757D;
            opacity: 0.65; 
        }
        
        .btn-outline-edit{
            background-image: url('@Url.Content("~/images/arroz.png")');
            background-size: cover;
            width: 250px;
            height: 250px;      
            color: #ffffff;
            border: #F1F1F1;
        }

        </style>

}